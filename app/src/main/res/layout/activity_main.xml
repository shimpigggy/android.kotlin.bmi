<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    
    <EditText
            android:id="@+id/main_edit_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="키"
            android:layout_margin="10dp"
    />
    
    <EditText
            android:id="@+id/main_edit_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_edit_height"
            android:hint="몸무게"
            android:layout_margin="10dp"
    />
    
    <Button
            android:id="@+id/main_btn_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결과"
            android:layout_below="@id/main_edit_weight"
            android:layout_margin="10dp"
            android:layout_alignEnd="@id/main_edit_height"/>
</RelativeLayout>